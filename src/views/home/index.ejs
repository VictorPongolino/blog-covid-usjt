        <div class="container px-4 px-lg-5">
        <% if (locals.carrossel) { %>
            <% for (let i = 0; i < carrossel.length; i++) { %>          
                <div class="row gx-4 gx-lg-5 align-items-center my-5">
                    <div class="col-lg-7"><img class="img-fluid rounded mb-4 mb-lg-0" src="https://dummyimage.com/900x400/dee2e6/6c757d.jpg" alt="..." /></div>
                    <div class="col-lg-5">
                        <h1 class="font-weight-light"><%= carrossel[i].titulo %></h1>
                        <p><%= carrossel[i].descricao %></p>
                        <a class="btn btn-primary" href="artigo/<%= carrossel[i].slug %>">Veja mais</a>
                    </div>
                </div>
            <% } %>
        <% } %>
        
        <% if (locals.noticias) { %>
                <div class="row gx-4 gx-lg-5">
                <% for (let i = 0; i < noticias.length; i++) { %>
                    <div class="col-md-4 mb-6">
                        <div class="card h-100">
                            <img src="https://dummyimage.com/286x180/000/fff" class="img-thumbnail" alt="...">

                            <div class="card-body">
                                <h2 class="card-title"><%= noticias[i].titulo %></h2>
                                <p class="card-text"><%= noticias[i].descricao %></p>
                            </div>
                            <div class="card-footer"><a class="btn btn-primary btn-sm" href="artigo/<%= noticias[i].slug %>">Veja mais</a></div>
                        </div>
                    </div>
                <% } %>
                </div>
        <% } else { %>
            NÃ£o encontramos nada!
        <% } %>

        </div>
                
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

        <%- include('./../partials/bootstrap_script'); %>


        <script src="js/home/scripts.js"></script>
    </body>
</html>
