<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('./../partials/header'); %>
    <%- include('./../partials/bootstrap_css'); %>
    
    <link rel="stylesheet" href="/css/registro/styles.css">
    
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
<div class="signup-form">
    <form action="/registrar" method="post">
		<p class="hint-text">Criar uma conta.</p>
        <div class="form-group">
        	<input type="text" class="form-control" name="nome" placeholder="Seu nome" required="required">
        </div>
        <div class="form-group">
        	<input type="email" class="form-control" name="email" placeholder="Email" required="required">
        </div>
		<div class="form-group">
            <input type="password" class="form-control" name="senha" placeholder="Senha" required="required">
        </div>
		<div class="form-group">
            <input type="password" class="form-control" name="confirmar_senha" placeholder="Confirme a sua senha" required="required">
        </div>        
		<div class="form-group">
            <button type="submit" class="btn btn-success btn-lg btn-block">Registrar</button>
        </div>

        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    </form>
	<div class="text-center">JÃ¡ tem uma conta? <a href="/login">Logue-se</a></div>

    <% if (locals.error && locals.error.length > 0) { %>
        <div class="alert alert-danger" role="alert">
        <% error.forEach(er => { %>
            - <%= er %>
            <br>
        <% }) %> 
        </div>
    <% } %>
</div>
    <%- include('./../partials/bootstrap_script'); %>
</body>
</html>

